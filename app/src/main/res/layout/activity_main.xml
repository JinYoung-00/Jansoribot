<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="23"
    tools:context=".MainActivity"
    android:background="#FDF8F2"
    android:orientation="vertical">
        <TextView
            android:layout_weight="1"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="40dp"
            android:textColor="#ffffff"
            android:background="#5EBC88"
            android:text="잔  소  리  봇"
            android:fontFamily="@font/bmjua"></TextView>

    <LinearLayout
        android:layout_weight="22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/weather"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:paddingLeft="40dp"
                android:paddingRight="30dp"
                android:src="@drawable/weather"
                app:tint="#DEB98B" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/bmjua"
                android:gravity="center_horizontal"
                android:text="날씨"
                android:textColor="#5EBC88"
                android:textSize="30dp"></TextView>

            <ImageView
                android:id="@+id/alarm"
                android:layout_width="match_parent"
                android:layout_height="168dp"
                android:paddingLeft="30dp"
                android:paddingRight="20dp"
                app:tint="#DEB98B"
                android:src="@drawable/notification" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:fontFamily="@font/bmjua"
                android:gravity="center_horizontal"
                android:text="알람"
                android:textColor="#5EBC88"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/infor"
                android:layout_width="match_parent"
                android:layout_height="162dp"
                android:paddingLeft="50dp"
                android:paddingRight="40dp"
                android:src="@drawable/information"
                app:tint="#DEB98B"></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="도움말"
                android:fontFamily="@font/bmjua"
                android:gravity="center_horizontal"
                android:textColor="#5EBC88"
                android:textSize="30dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/power"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:paddingLeft="40dp"
                android:paddingRight="50dp"
                android:src="@drawable/powerbutton"
                app:tint="#DEB98B"></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="전원"
                android:fontFamily="@font/bmjua"
                android:gravity="center_horizontal"
                android:textColor="#5EBC88"
                android:textSize="30dp"
                />

            <ImageView
                android:id="@+id/joystic"
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:paddingLeft="30dp"
                android:paddingRight="40dp"
                android:src="@drawable/joystic"
                app:tint="#DEB98B"></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="조종"
                android:fontFamily="@font/bmjua"
                android:gravity="center_horizontal"
                android:textColor="#5EBC88"
                android:textSize="30dp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>